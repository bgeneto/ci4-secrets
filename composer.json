{
    "name": "bgeneto/ci4-secrets",
    "description": "Secrets Package for Codeigniter 4 PHP Framework",
    "keywords":
    [
        "codeigniter", "codeigniter4", "secrets", "API key", "key", "password", "html", "php"
    ],
    "homepage": "https://github.com/bgeneto/ci4-secrets",
    "authors":
    [
        {
            "name": "bgeneto",
            "homepage": "https://github.com/bgeneto",
            "role": "Developer"
        }
    ],
    "license": "MIT",
    "require":
    {
        "php": ">=8.0"
    },
    "require-dev":
    {
        "codeigniter4/devkit": "*",
        "codeigniter4/framework": "^4",
        "friendsofphp/php-cs-fixer": "^3.68",
        "codeigniter/coding-standard": "^1.8",
        "nexusphp/cs-config": "^3.25"
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "autoload":
    {
        "psr-4":
        {
            "Bgeneto\\Secrets\\": "src/"
        }
    },
    "scripts": {
        "analyze": [
            "phpstan analyze"
        ],
        "sa": "@analyze",
        "ci": [
            "Composer\\Config::disableProcessTimeout",
            "@cs",
            "@deduplicate",
            "@analyze"
        ],
        "cs": [
            "Composer\\Config::disableProcessTimeout",
            "php-cs-fixer fix --ansi --verbose --dry-run --diff"
        ],
        "cs-fix": [
            "Composer\\Config::disableProcessTimeout",
            "php-cs-fixer fix --ansi --verbose --diff"
        ],
        "style": "@cs-fix"
    },
    "config": {
        "allow-plugins": {
            "phpstan/extension-installer": true
        }
    }
}
